<h1><%= @npc.name %></h1>

<p><%= @npc.description %></p>

<h2>Notes</h2>
<% @npc.notes.each do |note| %>
  <h4><%= note.title %></h4>
  <p>
    <%= note.description %>
  </p>
<% end %>

<%= link_to 'Edit NPC', edit_npc_path(@npc.id) %>
<br>
<%= link_to "Delete NPC", npc_path(@npc.id), method: :delete, data: {confirm: "Are you sure?"} %>
